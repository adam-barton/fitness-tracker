  <% if @exercise.errors.any? %>
    <% @exercise.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>

<%= form_for @exercise do |f| %>
<%= f.hidden_field :workout_id %>
    <div class="new_exercise_form">
        <%= f.label :name, class: "col-md-4 control-label" %>
        <%= f.text_field :name,  class: "form-control", id: "exercise-autocomplete", html: { autocomplete: "off" }  %>
    </div>
    <div>
        <%= f.label :reps_goal, class: "col-md-4 control-label" %>
        <%= f.text_field :reps_goal, class: "form-control" %> 
    </div>
    <%= f.submit %>
<% end %>