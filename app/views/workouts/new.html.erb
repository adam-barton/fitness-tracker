<h1>Create a new workout</h1>



  <% if @workout.errors.any? %>
    <% @workout.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>

<%= form_for @workout do |f| %>
    <div>
        <%= f.label :name, class: "col-md-4 control-label" %>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div>
        <%= f.label :duration, class: "col-md-4 control-label" %>
        <!-- <%= f.text_field :duration, class: "form-control" %> -->
        <%= f.select :duration, [[1], [2], [3], [4]], :include_blank => true, class: "form-control" %>
    </div>
    <div>
  <%= f.fields_for :exercise, Exercise.new do |exercise_attributes|%>
    <%= exercise_attributes.label :name, "Exercise Name:" %>
    <%= exercise_attributes.text_field :name %>
    <%= exercise_attributes.label :reps_goal, "How many reps?:" %>
    <%= exercise_attributes.text_field :reps_goal %>
  <% end %>
</div>
    <%= f.submit %>
<% end %>