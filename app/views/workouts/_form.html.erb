  <% if @workout.errors.any? %>
    <% @workout.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>

<%= form_for @workout do |f| %>
    <div>
        <%= f.label :name, class: "col-md-4 control-label" %>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div>
        <%= f.label :duration, class: "col-md-4 control-label" %>
        <%= f.select :duration, [['1 day'], ['7 days'], ['14 days'], ['1 month']], :include_blank => true, class: "form-control" %> 
    </div>
    <%= f.submit %>
<% end %>